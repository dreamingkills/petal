{
    "compilerOptions": {
        "target": "ES2015",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*",
        "./src/**/*.json",
        "./tests"
    ],
    "exclude": [
        "./node_modules"
    ]
}